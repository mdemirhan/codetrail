{
  "name": "@codetrail/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "verify:native": "ELECTRON_RUN_AS_NODE=1 electron -e \"const Database=require('better-sqlite3'); const db=new Database(':memory:'); db.prepare('select 1').get(); db.close(); console.log('better-sqlite3 ABI OK')\"",
    "rebuild:native": "HOME=./.home npm_config_devdir=./.electron-gyp electron-rebuild -f -w better-sqlite3",
    "fix:native": "bun run verify:native || bun run rebuild:native",
    "prestart": "bun run build && bun run fix:native",
    "predev": "bun run prestart",
    "start": "electron .",
    "start:verbose": "electron . --verbose",
    "dev": "electron .",
    "make:mac": "./scripts/make-macos-app.sh",
    "make:mac:x64": "./scripts/make-macos-app.sh x64",
    "make:mac:arm64": "./scripts/make-macos-app.sh arm64"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/plus-jakarta-sans": "^5.2.8",
    "better-sqlite3": "11.8.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@codetrail/core": "workspace:*",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron/rebuild": "^4.0.3",
    "electron": "35.0.0",
    "png2icons": "^2.0.1"
  }
}
